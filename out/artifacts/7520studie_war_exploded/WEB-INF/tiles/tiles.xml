<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- Base Definition -->
    <definition name="base-definition" template="/WEB-INF/tiles/layouts/defaultLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/template/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/tiles/template/footer.jsp"/>
    </definition>
    <!-- Home Page -->
    <definition name="home" extends="base-definition">
        <put-attribute name="title" value="Home"/>
        <put-attribute name="body" value="/WEB-INF/pages/index.jsp"/>
        <put-attribute name="current" value="home"/>
    </definition>
    <!-- products Page-->
    <definition name="products" extends="base-definition">
        <put-attribute name="title" value="SearchPage"/>
        <put-attribute name="body" value="/WEB-INF/pages/products.jsp"/>
        <put-attribute name="current" value="products"/>
    </definition>
    <!-- add Page-->
    <definition name="add" extends="base-definition">
        <put-attribute name="title" value="AddPage"/>
        <put-attribute name="body" value="/WEB-INF/pages/add.jsp"/>
        <put-attribute name="current" value="add"/>
    </definition>
</tiles-definitions>